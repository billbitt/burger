<div class="row">
    <h1>Burger Helper</h1>
    <h3>Eat burgers. Track your progress.  Have fun!</h3>
    <img src="/assets/img/burger.jpg" alt="burger" class="main-image">
    <h2>Add a new Burger to your list!</h2>
    <form action="/api" method="POST">
        <input type="text" name="burgerName" placeholder="Enter burger name here">
        <textarea type="text" name="burgerDescription" placeholder="Enter a short description"></textarea>
        <button type="submit">Submit</button>
    </form>
</div>
<div class="row">
    <div class="container-left">
        <h2 class="container-heading">Burgers I want to eat</h2>
        {{#each burgers}} 
            {{#unless this.eaten}}
                <div class="burger not-eaten">
                    <form action="/api/update/{{this.id}}?_method=PUT" method="POST">
                        <input name="burgerName" class="burger-input burger-name" value="{{this.burger_name}}">
                        <label for="burgerDescription">Description:</label> 
                        <textarea name="burgerDescription" class="burger-input">{{this.burger_description}}</textarea>
                        <button type="submit">Update</button>
                    </form>
                    {{!--button to move to the eaten list--}}
                    <form action="/api/eat/{{this.id}}?_method=PUT" method="POST">
                        <button type="submit">I ate this!</button>
                    </form>
                 </div>
            {{/unless}}
        {{/each}}
    </div>
    <div class="container-right">
        <h2 class="container-heading">Burgers I have eaten</h2>
        {{#each burgers}}
            {{#if this.eaten}}
                <div class="burger eaten">
                    <form action="/api/update/{{this.id}}?_method=PUT" method="POST">
                        <input name="burgerName" class="burger-input burger-name" value="{{this.burger_name}}">
                        <br>
                        <label for="burgerDescription">Description:</label> 
                        <textarea name="burgerDescription" class="burger-input">{{this.burger_description}}</textarea>
                        <br>
                        <label for="burgerRating">Rating:</label> 
                        <input name="burgerRating" class="burger-input" value="{{this.burger_rating}}">
                        <br>
                        <label for="burgerNotes">Notes:</label> 
                        <textarea name="burgerNotes" class="burger-input">{{this.burger_notes}}</textarea>
                        <br>
                        <button type="submit">Update</button>
                    </form>
                    {{!--button to move back to waiting-to-eat list--}}
                    <form action="/api/no-eat/{{this.id}}?_method=PUT" method="POST">
                        <button type="submit">I did not eat this</button>
                    </form>
                    {{!--button to delete from database--}}
                    <form action="/api/{{this.id}}?_method=DELETE" method="POST">
                        <button type="submit">Remove from database</button>
                    </form>
                </div>
            {{/if}}
        {{/each}}
    </div>
</div>